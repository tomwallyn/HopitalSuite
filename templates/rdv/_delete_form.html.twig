<form method="post" action="{{ path('rdv_delete', {'id': rdv.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ rdv.id) }}">
    <button class="d-none d-sm-inline-block btn btn-sm btn-danger shadow-sm">Annuler</button>
</form>
